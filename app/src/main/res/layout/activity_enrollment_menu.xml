<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/checkBoxSubject1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="checkBoxSubject1" />

    <CheckBox
        android:id="@+id/checkBoxSubject2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".checkBoxSubject2" />

    <CheckBox
        android:id="@+id/checkBoxSubject3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="checkBoxSubject3" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buttonSubmit" />
</LinearLayout>
